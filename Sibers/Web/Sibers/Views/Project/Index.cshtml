@model IEnumerable<Sibers.Services.ProjectService.Models.ProjectDto>
@using Sibers.Services.ProjectService.Models
@{
    ViewData["Title"] = "Index";
    var filterModel = ViewBag.FilterModel as ProjectFilter;
}
<h2>Список проектов</h2>
<div>
    @await Html.PartialAsync("_Filter", filterModel)
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BeginDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supervisor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Executors)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeginDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supervisor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Executors)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |

                @Html.ActionLink("Удалить", "Remove", new { id = item.Id }) |

                @Html.ActionLink("Детали", "Details", new { id = item.Id }) |

                @Html.ActionLink("Назначить исполнителей", "AppointEmployees", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
