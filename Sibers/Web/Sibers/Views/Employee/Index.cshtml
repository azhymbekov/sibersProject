@model IEnumerable<Sibers.Services.EmployeeService.Models.EmployeeDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Список сотрудников</h1>
<p>
    <a asp-action="Create">Добавить сотрудника</a>
</p>

<div class="text-danger">
    @ViewBag.Error      
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <text>
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Удалить", "Remove", new { id = item.Id }) |
                        @Html.ActionLink("Детали", "Details", new { id = item.Id })
                    </text>
                </td>
            </tr>
        }
    </tbody>
</table>

